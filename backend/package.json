{
  "name": "stock-copilot-backend",
  "version": "1.0.0",
  "description": "Backend services for Stock Copilot AI prediction platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "ts-node src/scripts/seed.ts",
    "docker:build": "docker build -t stock-copilot-backend .",
    "docker:run": "docker run -p 3001:3001 stock-copilot-backend"
  },
  "keywords": [
    "stock-prediction",
    "ai",
    "finance",
    "machine-learning",
    "typescript",
    "nodejs"
  ],
  "author": "Tekvo AI Hub",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "finnhub": "^2.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "redis": "^4.6.12",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "openai": "^4.20.1",
    "simple-statistics": "^7.8.3",
    "yahoo-finance2": "^2.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/ws": "^8.5.10",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prisma": "^5.7.1",
    "docker": "^1.0.0"
